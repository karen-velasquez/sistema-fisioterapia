ScreenManager:
    MenuScreen:
    VideoScreen:
    ListExerciseScreen:

<MenuScreen>:
    name: 'menu'
    MDFloatLayout:
        md_bg_color: 1,1,1,1
        Image:
            source: "logo2.jpg"
            pos_hint: {"y": .25}
        MDLabel:
            text: "Ingreso"
            post_hint: {"center_x": .5,"center_y": .5}
            halign: "center"
            font_name: "Poppins-SemiBold.ttf"
            font_size: "40sp"
            theme_text_color: "Custom"
            text_color: 60/255, 43/255, 117/255, 1

        MDFloatLayout:
            size_hint: .85, .08
            pos_hint: {"center_x": .5, "center_y": .38}
            canvas:
                Color:
                    rgb: (238/255, 238/255, 238/255, 1)
                RoundedRectangle:
                    size: self.size
                    pos: self.pos
                    radius: [25]
            TextInput:
                id: loginusername
                hint_text: "Username"
                size_hint: 1, None
                pos_hint: {"center_x": .5, "center_y": .5}
                height: self.minimum_height
                multiline: False
                cursor_color: 96/255, 74/255, 215/255, 1
                cursor_width: "2sp"
                foreground_color: 96/255, 74/255, 215/255, 1
                background_color: 0,0,0,0
                padding: 15
                font_name: "Poppins-Regular.ttf"
                font_size: "18sp"

        MDFloatLayout:
            size_hint: .85, .08
            pos_hint: {"center_x": .5, "center_y": .28}
            canvas:
                Color:
                    rgb: (238/255, 238/255, 238/255, 1)
                RoundedRectangle:
                    size: self.size
                    pos: self.pos
                    radius: [25]
            TextInput:
                id: loginpassword
                hint_text: "Password"
                password: True
                size_hint: 1, None
                pos_hint: {"center_x": .5, "center_y": .5}
                height: self.minimum_height
                multiline: False
                cursor_color: 96/255, 74/255, 215/255, 1
                cursor_width: "2sp"
                foreground_color: 96/255, 74/255, 215/255, 1
                background_color: 0,0,0,0
                padding: 15
                font_name: "Poppins-Regular.ttf"
                font_size: "18sp"


        Button:
            text: 'Ingresar'
            font_name: "Poppins-Regular.ttf"
            font_size: "20sp"
            size_hint: .5, .08
            pos_hint: {'center_x':0.5,'center_y':0.12}
            background_color: 0,0,0,0
            canvas.before:
                Color:
                    rgb: 246/255, 135/255, 177/255, 1
                RoundedRectangle:
                    size: self.size
                    pos: self.pos

            on_press: root.login(loginusername.text, loginpassword.text)


        Button:
            text: 'EXERCISE'
            font_name: "Poppins-Regular.ttf"
            font_size: "20sp"
            size_hint: .5, .08
            pos_hint: {'center_x':0.5,'center_y':0.22}
            background_color: 0,0,0,0
            canvas.before:
                Color:
                    rgb: 246/255, 135/255, 177/255, 1
                RoundedRectangle:
                    size: self.size
                    pos: self.pos
            on_press:
                root.manager.current = 'video'



<VideoScreen>:
    name: 'video'
    MDRectangleFlatButton:
        text: 'Back'
        pos_hint: {'center_x':0.10,'center_y':0.5}
        on_press: root.manager.current = 'menu'
    BoxLayout:
        id: boxvideo
        orientation: 'horizontal'
        Label:
            text: 'this on top'


<ListExerciseScreen>:
    name: 'listExercise'
    Carousel:
        MDFloatLayout:
            size_hint: .9, .58
            pos_hint: {'center_x': .5,'center_y': .5}
            Image:
                source: "login.jpg"
            MDLabel:
                text: 'Profile'
                halign: 'center'
            MDRectangleFlatButton:
                text: 'Back'
                pos_hint: {'center_x':0.5,'center_y':0.1}
                on_press:
                    root.manager.transition.direction = 'left'
                    root.manager.current = 'menu'

